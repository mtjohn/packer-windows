{
  "variables": {
    "autounattend": "./answer_files/10/Autounattend.xml",
    "cpus": "2",
    "disk_size": "61440",
    "headless": "true",
    "iso_checksum": "4767510FFB63CC6FE81BC81DDD377454751313185FFAE30B88DD597C8A24D371",
    "iso_checksum_type": "sha256",
    "iso_url": "C:\\ISO Images\\en_windows_10_business_editions_version_20h2_x64_dvd_4788fb7c.iso",
    "memory_size": "2048",
    "switch_name": "Default Switch",
    "vm_name": "DevBox"
  },
  "builders": [
    {
      "boot_wait": "6m",
      "communicator": "winrm",
      "configuration_version": "8.0",
      "cpus": "2",
      "disk_size": "{{user `disk_size`}}",
      "floppy_files": [
        "{{user `autounattend`}}",
        "./scripts/fixnetwork.ps1",
        "./scripts/disable-screensaver.ps1",
        "./scripts/disable-winrm.ps1",
        "./scripts/enable-winrm.ps1"
      ],
      "guest_additions_mode": "none",
      "iso_checksum": "{{ user `iso_checksum_type` }}:{{ user `iso_checksum` }}",
      "iso_url": "{{ user `iso_url` }}",
      "memory": "{{ user `memory_size` }}",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "switch_name": "{{user `switch_name`}}",
      "type": "hyperv-iso",
      "vm_name": "{{user `vm_name`}}",
      "winrm_password": "vagrant",
      "winrm_timeout": "12h",
      "winrm_username": "vagrant"      
    }    
  ],
  "post-processors": [
    {
      "keep_input_artifact": false,
      "output": "C:/HashiCorp/Vagrant_Boxes/windows_10_{{.Provider}}.box",
      "type": "vagrant",
      "vagrantfile_template": "vagrantfile-windows_10.template"
    }
  ],
  "provisioners": [
    {
      "execute_command": "{{ .Vars }} cmd /c \"{{ .Path }}\"",
      "remote_path": "/tmp/script.bat",
      "scripts": [
        "./scripts/enable-rdp.bat"
      ],
      "type": "windows-shell"
    },
    {
      "scripts": [
        "./scripts/chocolatey.ps1"
      ],
      "type": "powershell"
    }
  ]
}